{
	"name": "dev-container-template",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"host_username": "${localEnv:USERNAME}"
		}
	},

	"containerUser": "${containerEnv:HOST_USERNAME}",

	"workspaceMount": "source=${localWorkspaceFolder},target=/home/${containerEnv:HOST_USERNAME}/${localWorkspaceFolderBasename},type=bind",
	"workspaceFolder": "/home/${containerEnv:HOST_USERNAME}/${localWorkspaceFolderBasename}",

	"customizations": {
		"vscode": {
			"extensions": []
		}
	}
}
